# ===================================
# Environment Variables for Production
# ===================================
# Copy this file to .env and fill in the values
# DO NOT commit .env to version control!

# JWT Configuration
JWT_SECRET=ChangeThisToAStrongRandomSecretKeyForProduction!MinimumLength32Characters
JWT_EXPIRATION=86400000

# Database Configuration
DB_HOST=db
DB_PORT=3306
DB_NAME=apartment_db
DB_USERNAME=apartment
DB_PASSWORD=ChangeThisToAStrongDatabasePassword!

# CORS Configuration (comma-separated list)
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:80,https://yourdomain.com

# Application Configuration
SPRING_PROFILES_ACTIVE=prod
LOG_LEVEL=INFO
